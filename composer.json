{
    "name": "codeofdigital/client-builder",
    "description": "Customizable API Request Builder class for sending API requests easily",
    "homepage": "https://github.com/codeofdigital/client-builder",
    "type": "library",
    "keywords": [
        "codeofdigital",
        "laravel",
        "design pattern",
        "builder",
        "HTTP",
        "API request"
    ],
    "authors": [
        {
            "name": "Bryan Adam Loh",
            "email": "bryanadamloh97@gmail.com"
        }
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "illuminate/contracts": "^8.37|^9.0"
    },
    "require-dev": {
        "illuminate/routing": "^8.0|^9.0",
        "guzzlehttp/guzzle": "^7.3",
        "nunomaduro/collision": "^5.3",
        "orchestra/testbench": "^5.0|^6.0",
        "phpunit/phpunit": "^9.3"
    },
    "autoload": {
        "psr-4": {
            "CodeOfDigital\\ClientBuilder\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "CodeOfDigital\\ClientBuilder\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "tests": "./vendor/bin/phpunit --colors=always"
    },
    "extra": {
        "laravel": {
            "providers": [
                "CodeOfDigital\\ClientBuilder\\ClientBuilderServiceProvider"
            ]
        }
    }
}
